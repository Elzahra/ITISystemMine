@model IEnumerable<ITISystemMine.Models.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>
<table id="students" class="table table-hover table-striped">
    <thead>
        <tr>
            <th  class="text-center" scope="col">Name</th>
            <th  class="text-center" scope="col">Department</th>
            <th  class="text-center" scope="col">Edit</th>
            <th  class="text-center" scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Student in Model)
        {
            <tr>
                <td class="text-center">@Html.ActionLink(Student.FirstName+" "+ Student.LastName,"Details", new { Id = Student.Id })</td>
                <td class="text-center">
                    @if (Student.Department ==null)
                    {
                       <label>No Department</label>
                    }
                    else
                    {
                        @Student.Department.Name
                    }
                
                </td>
                <td class="text-center">@Html.ActionLink("Update","Edit",new {Id=Student.Id},new { @class = "btn btn-success" })</td>
                <td class="text-center">@Html.ActionLink("Remove", "Delete", new { Id = Student.Id },new { @class = "btn btn-danger" })</td>
            </tr>
        }     
    </tbody>
</table>
@Html.ActionLink("Add New Student", "StudentForm", "", new { @class = "btn btn-primary" })

@section scripts{
    <script>
        $(document).ready(function () {
            $("#students").DataTable();
        })
    </script>
    }


